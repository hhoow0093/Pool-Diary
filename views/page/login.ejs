<body>
    <%- include('../template/loader.ejs') %>
    <section class="login-page">
        <div class="row">
            <div class="col-0 col-md-6 col-xl-8 space"></div
                >
            <div class="col-12 col-md-6 col-xl-4 login-form">
                <form action="/checkaccount" method="post" class="log">
                    <div class="login-header">
                        <h1>Sign in</h1>
                        <span class="logo">
                            <svg xmlns="http://www.w3.org/2000/svg" width="75" height="75" fill="currentColor" class="bi bi-book-fill" viewBox="0 0 16 16">
                                <path d="M8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783"/>
                              </svg>
                              <h6 class="word-logo">My-Article</h6>
                        </span>
                    </div>
                    <div class="input-group mb-3 mt-5">
                        <input type="text" name="username" class="form-control username" placeholder="Enter your Username" aria-label="Username" aria-describedby="basic-addon1" id="Username">
                    </div>
                    <div class="input-group mb-3 mt-5">
                        <input type="password" name="password" class="form-control password" placeholder="Enter your Password" aria-label="Password" id="Password" aria-describedby="basic-addon1">
                    </div>
                    <div class="mt-5 pt-5">
                        <button type="submit" class="btn btn-dark container-fluid mt-3">Login</button>
                        <button type="button" class="btn btn-dark container-fluid mt-3">Feeling Stuck? Read Here for more information!</button>
                        <button type="button" class="btn btn-dark container-fluid mt-3">Personal Blog Website made by Howard.</button>
                        <button type="button" class="btn btn-dark container-fluid mt-3">Visit me in Github for accessing other projects i made!</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!--bootstrap js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
